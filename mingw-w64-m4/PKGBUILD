# Maintainer: Alexey Pavlov <alexpux@gmail.com>

_realname=m4
pkgname="${MINGW_PACKAGE_PREFIX}-${_realname}"
pkgver=1.4.17
pkgrel=1
pkgdesc="The GNU macro processor (mingw-w64)"
arch=('any')
url="https://www.gnu.org/software/m4"
license=('GPL3')
source=(https://ftp.gnu.org/gnu/m4/${_realname}-$pkgver.tar.xz{,.sig})
md5sums=('12a3c829301a4fd6586a57d3fcf196dc'
         'SKIP')

prepare() {
  cd ${srcdir}/${_realname}-$pkgver
}

build() {
  cd ${srcdir}/${_realname}-$pkgver
  ./configure \
    --prefix=${MINGW_PREFIX} \
    --build=${MINGW_CHOST} \
    --host=${MINGW_CHOST} \
    --target=${MINGW_CHOST} \
    --sysconfdir=${MINGW_PREFIX}/etc \
    --localstatedir=${MINGW_PREFIX}/var \
    --with-syscmd-shell=cmd.exe
  make
}

check() {
  cd ${srcdir}/${_realname}-$pkgver
  make check
}

package() {
  cd ${srcdir}/${_realname}-$pkgver
  make prefix=${pkgdir}${MINGW_PREFIX} install
}
